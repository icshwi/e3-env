

ESS_EPICS_PATH:=/testing/epics


## Use one base TAG per an installation, require Makefile cannot handle multiple epics bases.
## Base makefile can do this even if.
## Then I remove the plural form in VERSIONS/LOCATIONS to the singular form. 

## EPICS BASE
EPICS_BASE_TAG=R3.15.5
DEFAULT_EPICS_VERSION=$(EPICS_BASE_TAG:R%=%)
BASE_INSTALL_LOCATION=$(addprefix $(ESS_EPICS_PATH)/base-,$(DEFAULT_EPICS_VERSION))


## CROSS COMPILER_TARGET_ARCHS
#CROSS_COMPILER_TARGET_ARCHS:=linux-ppc64e6500
#CROSS_COMPILER_TARGET_ARCHS+=linux-arm

export CROSS_COMPILER_TARGET_ARCHS


REQUIRE:=require
# This is the REQUIRE module source tag
# *) individual tags
#    export EPICS_MODULE_TAG:=tags/require_2_5_3
# *) master branch 
#    export EPICS_MODULE_TAG:=master
# *) individual hash
REQUIRE_MODULE_TAG:=tags/v2.5.4
REQUIRE_VERSION:=2.5.4
REQUIRE_PATH:=$(addsuffix /$(REQUIRE)/$(REQUIRE_VERSION),$(BASE_INSTALL_LOCATION))
